---
import CompanyLogo from "../components/CompanyLogo.astro";
---
<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GConsulting Agency</title>
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="Consultoría, Marketing, Estrategias"/>
    <meta name="description" content="Impulsa tu estrategia de marketing. Obtenga asesoramiento y estrategias de expertos para acelerar su transformación digital."/>
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Impulsa tu estrategia de marketing." />
    <meta property="og:description" content="Obtenga asesoramiento y estrategias de expertos para acelerar su transformación digital." />
    <meta property="og:image" content="https://gconsulting.agency/logo.png" />
    <meta property="og:url" content="https://gconsulting.agency/" />
    <link rel="stylesheet" href="/fonts/stylesheet.css">
    <link rel="icon" href="/favicon.png">
    <style>
        * {
            font-family: 'Oxygen', sans-serif;
        }
    </style>
</head>
<body class="bg-white">
    <slot />
<footer class="bg-gray-800 p-10">
    <div class="container mx-auto flex justify-center md:justify-between items-center flex-wrap">
        <CompanyLogo />
        <p class="text-white mt-5 md:mt-0">Derechos reservados &copy; {new Date().getFullYear()}</p>
    </div>
</footer>
</body>
</html>
