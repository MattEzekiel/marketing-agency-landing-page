---
import CompanyLogo from "../components/CompanyLogo.astro";
---
<!doctype html>
<html lang="es">
<head>
    <title>GConsulting Agency | Impulsa tu estrategia de marketing.</title>

    <!-- HTML Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="Obtenga asesoramiento y estrategias de expertos para acelerar su transformación digital.">
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="Consultoría, Marketing, Estrategias"/>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://gconsulting.agency">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Impulsa tu estrategia de marketing.">
    <meta property="og:description" content="Obtenga asesoramiento y estrategias de expertos para acelerar su transformación digital.">
    <meta property="og:image" content="https://gconsulting.agency/logo-dark.png">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="gconsulting.agency">
    <meta property="twitter:url" content="https://gconsulting.agency">
    <meta name="twitter:title" content="Impulsa tu estrategia de marketing.">
    <meta name="twitter:description" content="Obtenga asesoramiento y estrategias de expertos para acelerar su transformación digital.">
    <meta name="twitter:image" content="https://gconsulting.agency/logo-dark.png">

    <!-- Site Map -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="stylesheet" href="/fonts/stylesheet.css">
    <link href="/favicon-light.png" rel="icon" media="(prefers-color-scheme: light)">
    <link href="/favicon-dark.png" rel="icon" media="(prefers-color-scheme: dark)">
    <style>
        * {
            font-family: 'Oxygen', sans-serif;
        }
    </style>
</head>
<body class="bg-white">
    <slot />
<footer class="bg-gray-800 p-10">
    <div class="container mx-auto flex justify-center md:justify-between items-center flex-wrap">
        <CompanyLogo />
        <p class="text-white mt-5 md:mt-0">Derechos reservados &copy; {new Date().getFullYear()}</p>
    </div>
</footer>
</body>
</html>
