---
interface Props {
    dark: boolean,
}

const { dark = false } = Astro.props;
---
<picture class="logo">
    <source srcset={`/assets/images/company-logo/company-logo-${!dark ? 'white' : 'dark'}.webp`} type="image/webp">
    <source srcset={`/assets/images/company-logo/company-logo-${!dark ? 'white' : 'dark'}.png`} type="image/png">
    <img class="max-w-[260px]" src="/assets/images/company-logo.webp" alt="Logo empresa" />
</picture>