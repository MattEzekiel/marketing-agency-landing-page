---
const companies = ['club-spa', 'maria-t','ras','o3','alma-loft', 'flow-bliss', 'walmart'];
---
<div class="owl-carousel owl-theme cursor-grab active:cursor-grabbing relative">
    {companies.map((data) => (
        <figure class="item">
            <picture>
                <img class="max-w-[200px] max-h-[100px] object-contain object-center" src={`/assets/images/${data}.webp`} alt={data}>
            </picture>
            <figcaption class="sr-only">{data} que conf√≠a en nosotros</figcaption>
        </figure>
    ))}
</div>
<style>
    @import url("/assets/css/owl.carousel.min.css");
    @import url("/assets/css/owl.theme.default.css");
    @import url("/assets/css/owl-dots.css");
</style>
<script src="/assets/js/jquery.min.js" type="text/javascript"></script>
<script src="/assets/js/owl.carousel.min.js" type="text/javascript"></script>
<script>
    $('.owl-carousel').owlCarousel({
        loop:true,
        nav:true,
        dots: false,
        autoplay:true,
        autoplayTimeout:4000,
        autoplayHoverPause:true,
        rtl:true,
        responsive:{
            0:{
                items:1
            },
            600:{
                items:3
            },
            1000:{
                items:5
            }
        }
    });
</script>
