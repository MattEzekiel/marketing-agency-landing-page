---
interface Props {
    alt: string,
    src: string,
    subtitle?: string,
}

const { subtitle, src, alt } = Astro.props;
---
<li class="p-5">
    <img class="w-full max-w-[100px] mx-auto wow animate__fadeInUp" src={src} alt={alt} loading="lazy">
    {subtitle ? (
            <h3 class="text-2xl mt-5 text-center text-pretty font-semibold">{subtitle}</h3>
    ): null}
</li>
<style>
    li {
        opacity: 0;
        animation: fadeIn ease-in-out forwards;
        animation-timeline: view();
        animation-range: 150px 200px;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
</style>
